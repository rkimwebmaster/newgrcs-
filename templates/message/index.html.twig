{% extends 'base.html.twig' %}

{% block title %}Message index{% endblock %}
{% block ariane %}
	{{parent() }}
	Mailer 
{% endblock %}
{% block body %}
	<table id="example1" class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Expediteur Structure</th>
                <th>Sujet</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Expediteur Structure</th>
                <th>Sujet</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </tfoot>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ message.date ? message.date|format_datetime('long') : '' }}</td>
                <td>{{ message.expediteurStructure }}</td>
                <td>{{ message.sujet }} 
                {{ message.isLu ? '<span class="fa fa-check-circle text-success"></span>' : '<span class="fa fa-times-circle text-warning"></span>' }}
                
                </td>
                <td>{{ message.contenu }}</td>
                <td>
                <div class="btn-group">
                    <a class="btn btn-default btn-sm" href="{{ path('app_message_show', {'id': message.id}) }}"><span class="fa fa-search-plus"></a>
                    {# <a class="btn btn-default btn-sm" href="{{ path('app_message_edit', {'id': message.id}) }}"><span class="fa fa-edit"></a> #}
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
