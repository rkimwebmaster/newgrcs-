{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ message.date ? message.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ExpediteurStructure</th>
                <td>{{ message.expediteurStructure }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ message.sujet }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ message.contenu }}</td>
            </tr>
        </tbody>
    </table>

