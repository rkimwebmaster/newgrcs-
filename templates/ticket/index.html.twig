{% extends 'base.html.twig' %}

{% block title %}Liste des Tickets {% endblock %}
{% block lesboutons %}
    {% if is_granted('ROLE_ADMIN_PT_CL') %}
	<a type="button" title="Ajouter nouveau "  href="{{path('app_compte_petit_client_index')}}"class="btn btn-sm btn-info">
		<i class="fas fa-plus-circle"></i>
		Nouveau
	</a>
    {% endif %}
{% endblock %} 
{% block ariane %}
{{parent() }} Ticket 
{% endblock %}
{% block body %}
    <table id="example1" class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Emission </th>
                <th>Compte </th>
                <th>Carburant  </th>
                <th>Chauffeur</th>
                <th>Plaque</th>
                <th>Retrait</th>
                <th>Quantité</th>
                {# <th>Is Credit</th>
                <th>Total Montant</th>
                <th>Is Servi</th> #}
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>#</th>
                <th>Emission </th>
                <th>Compte </th>
                <th>Carburant  </th>
                <th>Chauffeur</th>
                <th>Plaque</th>
                <th>Retrait</th>
                <th>Quantité</th>
                {# <th>Is Credit</th>
                <th>Total Montant</th>
                <th>Is Servi</th> #}
                <th>actions</th>
            </tr>
        </tfoot>
        <tbody>
        {% for ticket in tickets %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ ticket.date ? ticket.date|format_datetime('medium') : '' }}</td>
                <td>
                {# le code ci dessous a causé un bug de id, probablement du a une incoherence de données #}
                {{ ticket.comptePetitClient|upper }}
                {# {{ ticket.comptePetitClient.id|upper }} #}
                </td>
                <td>{{ ticket.typeCarburant }} - {#{ ticket.isGroupeElectrogene ? 'G.E' : 'Voiture' }#}
                {{ ticket.isServi ? '<span title="Ticket servi" class="fa fa-check-circle text-success">' : '<span title="Ticket non servi"  class="fa fa-times-circle text-danger">' }}
                </td>
                <td>{{ ticket.nomChauffeur|upper }}</td>
                <td>{{ ticket.numeroPlaqueImmatriculation|upper }}</td>
                <td>{{ ticket.dateRetrait ? ticket.dateRetrait|format_datetime('medium') : '' }}</td>
                <td>{{ ticket.quantite }} L </td>
                {# <td>{{ ticket.isCredit ? 'Yes' : 'No' }}</td>
                <td>{{ ticket.totalMontant }}</td>
                <td>{{ ticket.isServi ? 'Yes' : 'No' }}</td> #}
                <td>
                <div class="btn-group">
                    <a class="btn btn-default btn-sm" href="{{ path('app_ticket_show', {'id': ticket.id}) }}"><span class="fa fa-search-plus" /></a>
                    {% if is_granted('ROLE_ADMIN_PT_CL') and  ticket.isServi == false %}
                    <a class="btn btn-default btn-sm" href="{{ path('app_ticket_edit', {'id': ticket.id}) }}"><span class="fa fa-edit" /></a>
                    {% endif %}
                    {% if is_granted('ROLE_ADMIN_GD_FSS') and  ticket.isServi == false %}
                    <a class="btn btn-default btn-sm" href="{{ path('app_ticket_servi', {'id': ticket.id}) }}"><span class="fa fa-reply-all" /> servi </a>
                    {% endif %}
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12"class="text-warning">aucun enregistrement dans le système.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {# <a href="{{ path('app_ticket_new') }}"class="btn btn-default "> <span class="fa fa-plus-circle"> Créer nouveau </a> #}
{% endblock %}
