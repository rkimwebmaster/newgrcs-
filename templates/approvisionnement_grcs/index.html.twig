		<i class="fas fa-plus-circle"></i>
		Nouveau
	</a>
{% endblock %}
{% block ariane %}
{{parent() }}Appro.
{% endblock %}
{% block body %}
<table id="example1" class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Compte GRCS</th>
                <th>Quantite Diesel </th>
                <th>Quantite Essence  </th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Compte GRCS</th>
                <th>Quantite Diesel </th>
                <th>Quantite Essence  </th>
                <th>actions</th>
            </tr>
        </tfoot>
        <tbody>
        {% for approvisionnement_g_r_c in approvisionnement_g_r_cs %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ approvisionnement_g_r_c.date ? approvisionnement_g_r_c.date|format_datetime('long') : '' }}</td>
                <td>{{ approvisionnement_g_r_c.compteGRCS }}</td>
                <td>{{ approvisionnement_g_r_c.quantiteDiesel }} Litre(s) Diesel  </td>
                <td>{{ approvisionnement_g_r_c.quantiteEssence }} Litre(s) Essence  </td>
                <td>
                <div class="btn-group">
                    <a class="btn btn-default btn-sm" href="{{ path('app_approvisionnement_g_r_c_s_show', {'id': approvisionnement_g_r_c.id}) }}"><span class="fa fa-search-plus" /></a>
                    <a class="btn btn-default btn-sm" href="{{ path('app_approvisionnement_g_r_c_s_edit', {'id': approvisionnement_g_r_c.id}) }}"><span class="fa fa-edit" /></a>
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"class="text-warning">aucun enregistrement dans le système.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

