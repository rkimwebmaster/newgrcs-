{% extends 'base.html.twig' %}

{% block title %}Modifier mot de passe  utilisateur
{% endblock %}
{% block titre %}
	Modifier mot de passe  utilisateur
{% endblock %}
{% block lesboutons %}

	<a title="Retour à la liste " class="btn btn-info btn-sm" href="{{path('app_user_index')}}">
		<i class="fa fa-reply-all"></i>
		Rétour
	</a>
	<a type="button" title="Ajouter nouveau " href="{{path('app_user_index')}}" class="btn btn-sm btn-info">
		<i class="fas fa-plus-circle"></i>
		Nouveau
	</a>
	<a type="button" title="Modifier élément  " href="{{path('app_user_index')}}" class="btn btn-sm btn-info">
		<i class="fa fa-edit"></i>
		Changer mot de passe
	</a>
	<a type="button" title="Supprimer élément" href="{{path('app_user_index')}}" class="btn btn-sm btn-info">
		<i class="fas fa-trash"></i>
		Desactiver le compte
	</a>
{% endblock %}

{% block positionnement %}
	<span class="fa fa-angle-double-right"></span>
	Profile
	<span class="fa fa-angle-double-right"></span>
	Modification
{% endblock %}
{% block body %}
	{{ form_start(form) }}

	<div class="row">
		<div class="col-md-12">
			<div class="form-group">
				{{ form_row(form.email) }}
			</div>
		</div>
		<div class="col-md-12">
			<div class="form-group">
				{{ form_row(form.plainPassword.first) }}
			</div>
		</div>
		<div class="col-md-12">
			<div class="form-group">
				{{ form_row(form.plainPassword.second) }}
			</div>
		</div>
	</div>
	<button type="submit" class="btn btn-default">
		<span class="fa fa-download"></span>
		Enregistrer</button>
	{{ form_end(form) }}
	{# {{ include('user/_delete_form.html.twig') }} #}
{% endblock %}
