{% extends 'base.html.twig' %}

{% block title %}MessageGRCS index{% endblock %}
{% block lesboutons %}
	<a title="Ecrire à GRCS "  href="{{ path('app_message_g_r_c_s_new') }}" class="btn btn-sm btn-info">
		<i class="fas fa-envelope"></i>
		Ecrire
	</a>
{% endblock %}
{% block ariane %}
{{parent() }} Message GRCS
{% endblock %}
{% block body %}
    <table id="example1" class="table table-striped table-hover ">
        <thead>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Sujet</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>#</th>
                <th>Date</th>
                <th>Sujet</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </tfoot>
        <tbody>
        {% for message_g_r_c in message_g_r_cs %}
            <tr>
                <td>{{ loop.index }}</td>
                <td>{{ message_g_r_c.date ? message_g_r_c.date|format_datetime('long') : '' }}</td>
                <td>{{ message_g_r_c.sujet }}</td>
                <td>{{ message_g_r_c.contenu }}</td>
                <td>
                <div class="btn-group">
                    <a class="btn btn-default btn-sm"  href="{{ path('app_message_g_r_c_s_show', {'id': message_g_r_c.id}) }}"><span class="fa fa-search-plus" /></a>
                    {# <a class="btn btn-default btn-sm" href="{{ path('app_message_g_r_c_s_edit', {'id': message_g_r_c.id}) }}"><span class="fa fa-edit" /></a> #}
                </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5"class="text-warning">aucun enregistrement dans le système.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
