{% extends 'base.html.twig' %}

{% block title %}MessageGrandFournisseur index
{% endblock %}
{% block lesboutons %}
	{% if is_granted('ROLE_ADMIN_GRCS') %}
		<a type="button" title="Ajouter nouveau " href="{{path('app_message_grand_fournisseur_new')}}" class="btn btn-sm btn-info">
			<i class="fas fa-envelope"></i>
			Nouveau
		</a>
	{% endif %}
{% endblock %}
{% block ariane %}
	{{parent() }}
	Mailer
{% endblock %}
{% block body %}
	<table id="example1" class="table table-striped table-hover ">
		<thead>
			<tr>
				<th>#</th>
				<th>Date</th>
				<th>Sujet</th>
				<th>Contenu</th>
				<th>actions</th>
			</tr>
		</thead>
        <tfoot>
			<tr>
				<th>#</th>
				<th>Date</th>
				<th>Sujet</th>
				<th>Contenu</th>
				<th>actions</th>
			</tr>
		</tfoot>
		<tbody>
			{% for message_grand_fournisseur in message_grand_fournisseurs %}
				<tr>
					<td>{{ loop.index }}</td>
					<td>{{ message_grand_fournisseur.date ? message_grand_fournisseur.date|format_datetime('long') : '' }}</td>
					<td>{{ message_grand_fournisseur.sujet }}</td>
					<td>{{ message_grand_fournisseur.contenu }}</td>
					<td>
						<a href="{{ path('app_message_grand_fournisseur_show', {'id': message_grand_fournisseur.id}) }}"><span class="fa fa-search-plus"/></a>
						{# <a href="{{ path('app_message_grand_fournisseur_edit', {'id': message_grand_fournisseur.id}) }}"><span class="fa fa-edit"/></a> #}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5" class="text-warning">aucun enregistrement dans le système.</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{# <a href="{{ path('app_message_grand_fournisseur_new') }}"class="btn btn-default "> <span class="fa fa-plus-circle"> Créer nouveau </a> #}
{% endblock %}
